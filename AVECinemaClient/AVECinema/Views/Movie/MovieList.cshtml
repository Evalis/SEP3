@model AVECinema.cinema.movie[]

@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>

<div class="container">
    @if (Model != null)
    {
        foreach (var m in Model)
        {
            using (Html.BeginForm("SelectMovieToEdit", "Movie", m))
            {
                <div class="form-horizontal">
                    <div class="row movie-block">
                        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                            <img class="center-block img-responsive" src="@m.posterUrl" alt="@m.title image" />
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <h3>@m.title</h3>
                            <p><b>Overview: </b>@m.overview</p>
                            <input type="submit" value="@("Edit '"+ m.title + "'")" class="btn btn-info" />
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <h2 class="text-info text-capitalize text-center">No Movies were found in Database</h2>
    }
</div>
